---
import Layout from "../layouts/BaseLayout.astro";
---

<Layout title="Elise Grimm - Home">
    <main class="wrapper">
        <div class="homepage__container">
            <div class="homepage__content">
                <div class="[ homepage__body ] [ section ]">
                    <div class="clr-white">
                        <h1>Elise Grimm</h1>
                        <p>Clinical Psychologist & Psychotherapist</p>
                    </div>
                    <div class="flex-group" style="--flex-gap: var(--space-md)">
                        <a
                            class="button"
                            data-variant="outline-light"
                            href="therapy">Therapy</a
                        >
                        <a class="button" href="appointment">Book Appointment</a
                        >
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>

<style lang="scss">
    @use "@styles/abstracts" as *;

    main {
        flex-grow: 1;
        background: linear-gradient(
                90deg,
                rgba(0, 0, 0, 0.66) 0%,
                rgba(0, 0, 0, 0) 66%
            ),
            url(background-image.jpg);
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        min-height: 545px;
    }

    .homepage__container {
        /*--section-padding: var(--space-xl);*/

        /*display: grid;*/
        /*place-items: center;*/
    }

    .homepage__content {
        /*--flex-align: center;*/
        --flex-gap: var(--space-lg);

        /*justify-content: center;*/
    }

    .homepage__body {
        display: grid;
        gap: var(--space-xl);

        @media (width <= $breakpoint-small) {
            width: 100%;
        }
    }
</style>
