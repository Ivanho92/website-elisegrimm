---
import BaseLayout from "./BaseLayout.astro";
import {getEntry} from "astro:content";

interface Props {
    title: string;
}


const { frontmatter } = Astro.props;
const { title, coverImage } = frontmatter;
const coverImageUrl = `${Astro.url.origin}/${coverImage}`

const coverImageStyle = `
    background:	 		
        linear-gradient(
            90deg,
            rgba(0, 0, 0, 0.66) 0%,
            rgba(0, 0, 0, 0) 66%
        ),
        url(${coverImageUrl});
        background-repeat: no-repeat;
        background-size: cover;
        background-position: top right;
`;
---

<BaseLayout title={`Elise Grimm - ${title}`}>
    <div
        class="full-width section page__image-cover clr-white"
        style={coverImageStyle}
    >
        <h1>{title}</h1>
    </div>
    <main class="wrapper section flow">
        <slot />
    </main>
</BaseLayout>
