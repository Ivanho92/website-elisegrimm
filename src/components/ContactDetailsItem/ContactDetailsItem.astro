---
// Styles
import "./ContactDetailsItem.scss";

// Libraries
import {Icon} from "astro-icon/components";

// Javascript
interface Props {
    class?: string;
    category: string;
    icon: string;
    text: string;
    link: string;
    text2?: string;
    link2?: string;
    openInNewTab?: boolean;
}

const {
    class: className,
    category,
    icon,
    text,
    link,
    text2,
    link2,
    openInNewTab = false,
} = Astro.props;
---

<div class:list={["[ contact-item ] [ flex-group ]", className]}>
    <Icon name={icon} class="contact-item__icon" />
    <div>
        <p class="clr-medium fs-200 line-height-none">{category}</p>
        <p class="pt-xxs">
            <a
                class="clr-primary-shade"
                href={link}
                target={openInNewTab ? "_blank" : ""}
                aria-label={category + ": " + text}>{text}</a
            >{
                text2 && link2 ? (
                    <>
                        <>
                            <span>, </span>
                            <a
                                class="clr-primary-shade"
                                href={link2}
                                target={openInNewTab ? "_blank" : ""}
                                aria-label={category + ": " + text2}
                            >
                                {text2}
                            </a>
                        </>
                    </>
                ) : null
            }
        </p>
    </div>
</div>
